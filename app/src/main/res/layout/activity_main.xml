<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".dashboard.MainActivity">

    <!-- Logo/Image -->
    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:contentDescription="App Logo"
        android:scaleType="fitCenter"
        android:src="@drawable/cg" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/appSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="AI-Powered Job Assistant"
        android:textColor="#0A4D91"
        android:textSize="20sp"
        android:fontFamily="sans-serif-medium" />

    <!-- Swipe Button -->
    <RelativeLayout
        android:id="@+id/slideButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/appSubtitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/blue_gradient_bg"
        android:clipToOutline="true">

        <!-- Circle Handle -->
        <RelativeLayout
            android:id="@+id/slideHandle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_shape">

            <TextView
                android:id="@+id/handleArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="âž”"
                android:textSize="28sp"
                android:textColor="#0A4D91"
                android:fontFamily="sans-serif-black" />
        </RelativeLayout>

        <!-- Slide Text -->
        <TextView
            android:id="@+id/slideText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/slideHandle"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:text="Slide to get Started"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>
